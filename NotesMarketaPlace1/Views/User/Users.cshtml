@using NotesMarketPlace.Models
@model NotesMarketPlace.Models.UserProfileView

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>

    <!-- Important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Favicon-->
    <link rel="shortcut icon" href="~/img/images/favicon.ico">

    <!--Title-->
    <title> Notes - MarketPlace</title>

    <!--Google Fonts-->

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
             :wght@300;400;600;700&display=swap" rel="stylesheet">

    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!--Fontawesome-->
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.css">

    <!--Custom CSS-->
    <link rel="stylesheet" href="~/css/user-profile.css">

    <!--Responsive CSS-->
    <link rel="stylesheet" href="~/css/responsiveindex.css">

</head>


<!--Header-->
@Html.Partial( "_navbarHeader")
<!--Header ends-->
<!--Home-->
<section id="home">
    <div id="home">
        <!-- Background Video -->
        <img src="~/img/User-Profile/User-Profile/banner-with-overlay.jpg" id="home-bg-video" alt="Home">


        <div id="home-content">

            <h3>User Profile</h3>

        </div>

    </div>

</section>
<!--Home Ends-->

<div id="user-details"   class = "container" >
    @using (Html.BeginForm("Users", "User", FormMethod.Post , new { enctype = "multipart/form-data" }) )
    {
            <div class="row">
                <div class="col-md-12">
                    <h3>Basic Profile Details</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <p>First Name <sup>&#8727;</sup></p>
                            <div class="form-group">
                                @Html.EditorFor(x => x.First_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your First name"} })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <p>Last Name <sup>&#8727;</sup></p>
                            <div class="form-group">
                                @Html.EditorFor(x => x.Last_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Last name" } })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <p>Secondary Email <sup>&#8727;</sup></p>
                            <div class="form-group">
                                @Html.EditorFor( x => x.SecondaryEmailAddress , new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Email ID" } })
                           </div>
                        </div>
                        <div class="col-md-6">
                            <p>Date of Birth</p>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.DOB, new { Type = "date", @class = "form-control", @placeholder = "Enter your Date of Birth" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <p>Gender</p>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.Gender, new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender", new { @class = "form-control", id = "gender" })
                                @*<select class="form-control" id="gender">*@
                                  @*  <option>Male</option>*@
                                   @* <option>Female</option>*@
                                   @* <option>Others</option>*@
                               @* </select>*@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <p>Phone Number</p>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Phone_number_Country_Code, new { @class = "form-control", id = "countrycode" })
                                        @*<option>+91</option><option>+11</option><option>+92</option><option>+01</option>*@
                                    </div>
                                </div>

                                <div class="col-md-9">
                                    <div class="form-group">
                                        <div class="form-group">
                                            @Html.TextBoxFor(x => x.Phone_Number, new { @class = "form-control", @placeholder = "Enter your Phone Number" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <p>Profile Picture</p>

                            <div class="form-group custom-drop-file text-center">

                                @*@Html.TextBoxFor(x => x.Profile_Picture, new { Type = "file", @class = "form-control", id = "img-upload", @placeholder = "Upload a picture" })*@
                                <input type="file" name="Profile_picture" class="form-control" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />
                                @*<input class="form-control" id="img-upload" name="img-upload" type="file" />*@

                            </div>

                        </div>

                    </div>

                    <div class="col-md-12">
                        <h3>Address Details</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <p>Address Line 1 <sup>&#8727;</sup></p>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Address_Line1, new { @class = "form-control", id = "add1", @placeholder = "Enter your address" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <p>Address Line 2</p>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Address_Line2, new { @class = "form-control", id = "add2", @placeholder = "Enter your address" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <p>City <sup>&#8727;</sup></p>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.City, new { @class = "form-control", id = "city", @placeholder = "Enter your City" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <p>State <sup>&#8727;</sup></p>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.State, new { @class = "form-control", id = "state", @placeholder = "Enter your State" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <p>ZipCode <sup>&#8727;</sup></p>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.ZipCode, new { @class = "form-control", id = "zipcode", @placeholder = "Enter your Zip-Code" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <p>Country <sup>&#8727;</sup></p>
                                <div class="form-group">
                                    @Html.DropDownListFor(x => x.Country, new List<SelectListItem> { new SelectListItem { Text = "India", Value = "India" }, new SelectListItem { Text = "USA", Value = "USA" } }, "Please select Country", new { @class = "form-control", id = "country" })
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12">
                        <h3>University and College Information</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <p>University</p>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.University, new { @class = "form-control", id = "University", @placeholder = "Enter your University" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <p>College</p>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.College, new { @class = "form-control", id = "add1", @placeholder = "Enter your College" })
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-general btn-yellow" href="#" title="Submit" role="button">Submit</button>
                    </div>


                </div>
            </div>

          }
    </div>

<!--Footer-->
@Html.Partial("_navbarFooter")

<!--JS-->
<!--JQUERY JS-->
<script src="~/js/jquery.js"></script>

<!--Bootstrap JS-->
<script src="~/js/bootstrap.min.js"></script>

<!--Custom JS-->
<script src="~/js/user-profile.js"></script>

</body>
</html>
