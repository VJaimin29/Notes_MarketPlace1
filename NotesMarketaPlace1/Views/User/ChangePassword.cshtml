@model NotesMarketPlace.Models.ChangePassword

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <!-- Important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Favicon-->
    <link rel="shortcut icon" href="~/img/images/favicon.ico">

    <!--Title-->
    <title> Notes - MarketPlace</title>

    <!--Google Fonts-->

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
             :wght@300;400;600;700&display=swap" rel="stylesheet">

    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!--Fontawesome-->
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.css">

    <!--Custom CSS-->
    <link rel="stylesheet" href="~/css/finalchangepassword.css">

    <!--Responsive CSS-->
    <link rel="stylesheet" href="~/css/responsiveindex.css">

</head>

<body>

    <div class="bg-img">
        <div class="container">
            <div class="logo text-center">
                <img src="~/img/pre-login/top-logo.png" alt="logo">
            </div>

            @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
            {
        <div id="details">
            <h1 class="text-center">Change Password</h1>
            <p class="text-center">Enter your new password to change your password</p>
            <p class="text-danger">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</p>

            <p>Old Password</p>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", id = "oldpwd", @placeholder = "Enter your old password" })
                @*<input type="password" class="form-control" id="oldpwd" placeholder="Enter your old password">*@
            </div>

            <p>New Password</p>
            <div class="form-group">
                @Html.TextBoxFor(x => x.newPassword, new { @class = "form-control", id = "newpwd", @placeholder = "Enter your old password" })
                @*<input type="password" class="form-control" id="newpwd" placeholder="Enter your new password">*@
            </div>

            <p>Confirm Password</p>
            <div class="form-group">
                @Html.TextBoxFor(x => x.confirmNewPassword, new { @class = "form-control", id = "confirmpwd", @placeholder = "Enter your old password" })
                @Html.ValidationMessageFor(c => c.confirmNewPassword, "", new { @class = "text-danger" })
                @*<input type="password" class="form-control" id="confirmpwd" placeholder="Enter your confirm password">*@
            </div>

            <div id="submit-btn">
                <button class="btn btn-general btn-yellow" href="#" title="Submit" role="button">Submit</button>
            </div>

        </div>
            }

        </div>
    </div>
</body>
</html>