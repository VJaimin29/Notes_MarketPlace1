 
@model NotesMarketPlace.Models.Confirm

@{
    Layout = null;
}

<html>

<head>

    <!-- Important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Title-->
    <title> Notes - MarketPlace</title>

    <!--Favicon-->
    <link rel="shortcut icon" href="~/img/images/favicon.ico">

    <!--Google Fonts-->

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
             :wght@300;400;600;700&display=swap" rel="stylesheet">

    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!--Fontawesome-->
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.css">

    <!--Custom CSS-->
    <link rel="stylesheet" href="~/css/admin-login.css">

    <!--Responsive CSS-->
    <link rel="stylesheet" href="~/css/responsiveindex.css">

</head>

<body>

    <div class="bg-img">

        <div class="container">

            <div class="logo text-center">
                <img src="~/img/pre-login/top-logo.png" alt="logo">
            </div>

            @* Form For User Sign Up *@

            @using (Html.BeginForm("addUsers", "User", FormMethod.Post))
            {
        <div id="details">
            <h1 class="text-center">Create An Account</h1>
            <p class="text-center">Enter your details to Sign Up</p>

            @*For failure in submit code or user already exist*@

            @if (ViewBag.Error != null)
            {
                <h2 class="text-danger">Viewbag.Error</h2>
            }

            <p>First Name*</p>
            <div class="form-group">
                @Html.TextBoxFor(c => c.First_Name, new { @class = "form-control", @placeholder = "Enter your First Name" })
                @Html.ValidationMessageFor(c => c.First_Name, "", new { @class = "text-danger" })
            </div>

            <p>Last Name*</p>
            <div class="form-group">
                @Html.TextBoxFor(c => c.Last_Name, new { @class = "form-control", @placeholder = "Enter your Last Name" })
                @Html.ValidationMessageFor(c => c.Last_Name, "", new { @class = "text-danger" })
            </div>

            <p>Email*</p>
            <div class="form-group">
                @Html.TextBoxFor(c => c.EmailID, new { @class = "form-control", @placeholder = "Enter your Email ID" })
                @Html.ValidationMessageFor(c => c.EmailID, "", new { @class = "text-danger" })
            </div>

            <p>Password*</p>
            <div class="form-group">
                @Html.TextBoxFor(c => c.Password, new { @class = "form-control", @placeholder = "Enter your Password" })
                @Html.ValidationMessageFor(c => c.Password, "", new { @class = "text-danger" })
            </div>

            <p>Confirm Password*</p>
            <div id="submit-btn">
                @Html.TextBoxFor(c => c.ConfirmPassword, new { @class = "form-control", @placeholder = "Enter your Confirm Password" })
                @Html.ValidationMessageFor(c => c.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            @if (ViewBag.A != null)
            {
                <h4 class="text-danger">User Email already Exist</h4>
            }

            <div id="submit-btn" style="margin-top:20px;">
                <button type="submit" class="btn btn-general btn-yellow" href="#" title="Submit" role="button">Submit</button>
            </div>

            <p class="text-center">Already have an account? <a href="#signup">Login</a></p>

        </div>

            }

        </div>

    </div>

</body>

</html>
