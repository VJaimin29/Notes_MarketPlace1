@model NotesMarketPlace.Models.ContactUs


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <!-- Important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Favicon-->
    <link rel="shortcut icon" href="~/img/images/favicon.ico">


    <!--Title-->
    <title> Notes - MarketPlace</title>

    <!--Google Fonts-->

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
                 :wght@300;400;600;700&display=swap" rel="stylesheet">

    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!--Fontawesome-->
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.css">

    <!--Custom CSS-->
    <link rel="stylesheet" href="~/css/contactus.css">

    <!--Responsive CSS-->
    <link rel="stylesheet" href="~/css/responsiveindex.css">

</head>


<!--Header-->
@Html.Partial("_navbarHeader")
<!--Header ends-->
<!--Home-->
<section id="home">
    <div id="home">
        <!-- Background Video -->
        <a href="@Url.Action("LandP","Front")">
            <img src="~/img/Contact-Us/Contact-Us/banner-with-overlay.jpg" id="home-bg-video" alt="Home">
        </a>

        <div id="home-content">

            <h3>Contact Us</h3>

        </div>
    </div>

</section>
<!--Home Ends-->

<div id="user-details">
    @using (Html.BeginForm("ContactUs1", "Front", FormMethod.Post, new { @class = "container" }))
    {
        <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <h3>Get in Touch</h3>
            <p>Let us know how to get back to you</p>
            <div class="row contactform">
                <div class="col-md-6">
                    <p>Full Name <sup>&#8727;</sup></p>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.First_Name, new { @class = "form-control", id = "name", @placeholder = "Enter your first name" })
                        @*<input type="text" class="form-control" id="name" placeholder="Enter your full name" required>*@
                    </div>

                    <p>Email Address <sup>&#8727;</sup></p>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control", id = "email", @placeholder = "Enter your Email-Address" })
                        @*<input type="text" class="form-control" id="email" placeholder="Enter your email address" required>*@
                    </div>

                    <p>Subject <sup>&#8727;</sup></p>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", id = "subject", @placeholder = "Enter your Subject" })
                        @* <input type="text" class="form-control" id="subject" placeholder="Enter your subject" required>*@
                    </div>
                </div>
                <div class="col-md-6">
                    <p>Comments/Questions <sup>&#8727;</sup></p>

                    <div class="form-group">
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", id = "message", @placeholder = "Enter your description" })
                        @*<textarea class="form-control" id="message" placeholder="Enter your description" required></textarea>*@
                    </div>
                </div>
            </div>
            <button type="submit" id="btnSubmit" class="btn btn-primary btn-sm">Submit</button>
        </div>

    </div>

   }
</div>

    <hr>
    <!--Footer-->
    @Html.Partial("_navbarFooter")

    <!--JS-->
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.js"></script>

    <script src="~/js/contactus.js"></script>


    </body>
</html>

