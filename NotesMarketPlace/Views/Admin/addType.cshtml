@model NotesMarketPlace.Models.NotesType

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <!-- Important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Title-->
    <title> Notes - MarketPlace</title>

    <!--Google Fonts-->

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
             :wght@300;400;600;700&display=swap" rel="stylesheet">

    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!--Fontawesome-->
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.css">

    <!--Custom CSS-->
    <link rel="stylesheet" href="~/cssA/admin-addtype.css">

    <!--Responsive CSS-->
    <link rel="stylesheet" href="~/cssA/admin-responsive-myprofile.css">

</head>

<body>

    <!--Header-->
    <header>
        <nav class="navbar navbar-fixed-top">
            <div class="container">
                <div class="site-nav-wrapper">

                    <div class="navbar-header">

                        <!--Mobile menu Open Button-->
                        <span id="mobile-nav-open-btn">&#9776;</span>

                        <!--Logo-->
                        <a href="#home" class="navbar-brand"><img src="~/home/logo.png"></a>
                    </div>

                    <div class="container">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav pull-right ">
                                <li><a href="#search" class="active">Dashboard</a></li>
                                <li><a href="#sell">Notes</a></li>
                                <li><a href="#FAQ">Members</a></li>
                                <li><a href="#contact">Reports</a></li>
                                <li><a href="#contact">Settings</a></li>
                                <li>
                                    <a href="#profile" class="photo">
                                        <img src="~/img/Customers/client-1.jpg" class="img-circle">
                                    </a>
                                </li>

                                <li><a href="#login">Logout</a></li>
                            </ul>
                        </div>
                    </div>

                    <!--Mobile Menu-->
                    <div id="mobile-nav">
                        <!--Mobile Menu Close Button-->
                        <span id="mobile-nav-close-btn">&times;</span>
                        <div id="mobile-nav-content">
                            <ul class="nav">
                                <li><a href="#profile"><img src="~/img/Customers/client-1.jpg" class="img-circle"></a></li>
                                <li><a href="#search">Dashboard</a></li>
                                <li><a href="#search">Notes</a></li>
                                <li><a href="#sell">Members</a></li>
                                <li><a href="#FAQ">Reports</a></li>
                                <li><a href="#contact">Settings</a></li>
                                <li><a href="#login">Logout</a></li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <!--Header ends-->

    <div id="user-details">
        @using (Html.BeginForm("addType", "Admin", FormMethod.Post, new { @class = "container" }))
        {
            <div class="row">
                <div class="col-md-12">
                    <h4>Add Type</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <p>Type</p>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Name , new { @class="form-control" , id="type" , @placeholder="Enter Type"})
                        @* <input type="text" class="form-control" id="type" placeholder="Enter Type">*@
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <p>Description</p>
                    <div class="form-group">
                        @Html.TextAreaFor(x => x.Description, new { @class="form-control" , id="message" , @placeholder="Enter your description"})
                        @*<textarea class="form-control" id="message" placeholder="Enter your description"></textarea>*@
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-general btn-yellow" href="#" title="Submit" role="button">Submit</button>
                </div>
            </div>

        }

    </div>

    <footer>
        <hr>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>Copyright &#169; Tatvasoft All rights reserved.</p>
                </div>
                <div class="col-md-6 text-right">
                    <ul class="social-list">
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>


    <!--JS-->
    <!--JQUERY JS-->
    <script src="~/js/jquery.js"></script>

    <!--Bootstrap JS-->
    <script src="~/js/bootstrap.min.js"></script>

    <!--Custom JS-->
    <script src="~/js/admin-addtype.js"></script>

</body>



</html>
