@model NotesMarketPlace.Models.User

    @{
        Layout = null;
    }

    <html>

    <head>

        <!-- Important meta tags -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!--Favicon-->
        <link rel="shortcut icon" href="~/img/images/favicon.ico">

        <!--Title-->
        <title> Notes - MarketPlace</title>

        <!--Google Fonts-->

        <link href="https://fonts.googleapis.com/css2?family=Open+Sans
                 :wght@300;400;600;700&display=swap" rel="stylesheet">

        <!--Bootstrap CSS-->
        <link rel="stylesheet" href="~/css/bootstrap.min.css">

        <!--Fontawesome-->
        <link rel="stylesheet" href="~/font-awesome/css/font-awesome.css">

        <!--Custom CSS-->
        <link rel="stylesheet" href="~/css/loginfinal.css">

        <!--Responsive CSS-->
        <link rel="stylesheet" href="~/css/responsiveindex.css">

    </head>

    <body>

        <div class="bg-img">

            <div id="loginform">

                <div class="logo text-center">
                    <img src="~/img/pre-login/top-logo.png" alt="logo">
                </div>

                @using(Html.BeginForm("finalLogin", "User", FormMethod.Post))
                {
                <div id="details">
                <h1 class="text-center">Login</h1>
                <p class="text-center">Enter your email address and password to login</p>

                <p class="text-danger">@Html.ValidationSummary(true , "" , new { @class = "text-danger" })</p>

                <p>Email</p>

                <div class="form-group">
                    @Html.TextBoxFor(c => c.EmailID, new { @class = "form-control", id = "email", @placeholder = "Enter your Email Address" })
                </div>

                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-6 text-left">
                        <p>Password</p>
                    </div>

                    <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                        <p><a href="@Url.Action("forgotPassword","Front")">Forgot Password?</a></p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.PasswordFor(c => c.Password, new { @class = "form-control", id = "pwd", @placeholder = "Enter your Password" })
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        &nbsp; Remember me
                    </label>
                </div>

                <div id="submit-btn">
                    <button type="submit" class="btn btn-general btn-yellow" href="#" title="Submit" role="button">Login</button>
                </div>

                <p class="text-center">Don't have an account? <a href="@Url.Action("SignUp","User")">Sign Up</a></p>

                </div>
                }

            </div>

        </div>

    </body>

    </html>